@model LoginVM;
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MasExpenseSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-4">

                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        <h2 class="text-center mb-4 fw-bold">Login</h2>

                        <form asp-controller="Account" asp-action="Login" method="post">

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Your email">
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Your password">
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            @if (ViewBag.message != null)
                            {
                                <div class="alert alert-danger py-2 small" role="alert">
                                    @ViewBag.message
                                </div>
                            }

                            <div class="d-grid mb-3">
                                <button class="btn btn-primary" type="submit">Log In</button>
                            </div>

                            <div class="d-grid">
                                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">
                                    Register
                                </a>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>
