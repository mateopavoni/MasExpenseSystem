@model ServiceVM
@{  

}

<div class="row mt-4">
    <div class="col-sm-6 offset-sm-3">
        <h2>New Service</h2>
        <form asp-controller="Service" asp-action="New" method="post">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Your service name" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Type</label>
                <select class="form-select" asp-for="Type">
                    <option value="" selected disabled>-- select --</option>
                    <option value="income">income</option>
                    <option value="expense">expense</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
                
            @if (ViewBag.message == null)
            {
                <div class="alert alert-danger" role="alert">
                </div>
            }

            
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="submit">Add new</button>
                <a class="btn btn-warning" asp-controller="Service" asp-action="Index">Back</a>
            </div>
        </form>

    </div>
</div>