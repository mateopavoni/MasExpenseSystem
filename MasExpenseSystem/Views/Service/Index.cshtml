@using MasExpenseSystem.Entities
@model List<ServiceVM>

<div class="row">
    <div class="col-sm-6">
        <h2>Services</h2>
    </div>
    <div class="col-sm-6 text-end">
        <a href="/Service/New" class="btn btn-success">New Service</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Type</td>
                        <td>
                            <a href="/Service/Edit/@service.ServiceId" class="btn btn-warning btn-sm">Edit</a>
                            <button class="btn btn-danger btn-sm" onclick="deleteItem(@service.ServiceId)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteItem(serviceId) {
            if (confirm("Are you sure to delete this service?")) {
                window.location.href = '@Url.Action("Delete", "Service")' + '?id=' + serviceId;
            }
        }
    </script>
}

