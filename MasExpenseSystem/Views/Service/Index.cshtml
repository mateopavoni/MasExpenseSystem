@using MasExpenseSystem.Entities
@model List<ServiceVM>

<div class="row">
    <div class="col-sm-6">
        <h2>Services</h2>
    </div>
    <div class="col-sm-6 text-end">
        <a href="/Service/New" class="btn btn-success">New Service</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th style="width:100px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Type</td>
                        <td style ="width:100px">
                            <a href="/Service/Edit/@service.ServiceId" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                            <button class="btn btn-danger btn-sm" onclick="deleteItem(@service.ServiceId)"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script>
        function deleteItem(serviceId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {

                    Swal.fire({
                        title: "Deleted!",
                        text: "Your service has been deleted.",
                        icon: "success",
                        timer: 1200,
                        showConfirmButton: false
                    });
                    setTimeout(() => {
                        window.location.href = '/Service/Delete?id=' + serviceId;
                    }, 1200);

                }
            });
        }
    </script>
}

